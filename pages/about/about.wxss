.circle-float {
  color: white;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  bottom: 20rpx;
  right: 20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  font-size: 28rpx;
  background: red;
}

.center {
  margin: 0 auto;
  text-align: center;
  font-weight: bold;
  margin-top: 10px;
}

.ad_image{
  border-radius: 5px;
}

.footer {
