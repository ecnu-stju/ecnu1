.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 135rpx;
  height: 135rpx;
  margin: 20rpx;

  border-radius: 100%;

}

.userinfo-nickname {
  color: black;
}

.btn_top{
  background-color: transparent;
  border: 2rpx solid black;
}

.input-text {
  border: 1px solid black;
  height: 30px;
  margin: 10px;
  border-radius: 5px;
}

.section__title {
  margin: 10px;
}

.btn_sub {
  width: 560rpx;
  height: 100rpx;
  margin: 40rpx auto;
  color: black;
  background-color: transparent;
  border-radius: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: 3rpx solid black;
}

.v_title {
  margin: 10px;
  color: red;
}

.v_comment {
  color: black;
}

.v_top {
  margin-top: 10px;
}

